<table class="table table-striped">
  <thead>
    <tr>
      <td>Active?</td>
      <td>Days of Inactivity</td>
      <td>Message</td>
      <td></td>
      <td></td>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>active button</td>
      <td>
        <div class='inline-flex'>
        <%= link_to raw('<i class="fa fa-chevron-up block toggle-up"></i>'), trig_inc_path(trigger) %>
        </div>
        <div class='block'>
          <span class='incDays'><%= trigger.duration_in_hours %></span>
        </div>
        <div>
        <%= link_to raw('<i class="fa fa-chevron-down block toggle-down"></i>'), trig_dec_path(trigger) %>
        </div>
      </td>
      <td>trigger.message_text[0..18]...</td>
      <td class='editTrigger'><a href="">edit</a></td>
      <td><a href="/triggers/<%=trigger.id%>/delete">delete</a></td>
    </tr>
    <tr class='messageHolder'>
      <%= form_for(trigger) do |f| %>
      <%= f.text_area :message_text %>
      <%= f.submit 'Update Message' %>
      <% end %>
    </tr>
  </tbody>
</table>
