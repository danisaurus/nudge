<div id="mood-wheel" class="col-lg-12">
    <h3>how are you feeling?</h3>
    <div id="menu">
         
        <div id="on-button"></div>

        <div id="menu-items">
            <div class="middle">
                <div class="top">
                    <span class="bg-piece"> </span> 
                    <label class="ss-tornado" for="info-tornado"><!-- Put home icon here if not using symbol set --></label>
                    <span class="bg-piece"> </span> 
                    <label class="ss-sun" for="info-sun"><!-- Put compass icon here if not using symbol set --></label>
                    <span class="bg-piece"> </span> 
                    <label class="ss-sunset" for="info-sunset"><!-- Put heart icon here if not using symbol set --></label> 
                </div>
                <div class="bottom">
                    <span class="bg-piece"> </span> 
                    <label class="ss-storm" for="info-storm"><!-- Put rss icon here if not using symbol set --></label> 
                    <span class="bg-piece"> </span> 
                    <label class="ss-rainy" for="info-rainy"><!-- Put refresh icon here if not using symbol set --></label> 
                    <span class="bg-piece"> </span> 
                    <label class="ss-cloudy" for="info-cloudy"><!-- Put icon here if not using symbol set --></label> 
                </div>
            </div>
             
        </div>

    </div>
</div>

