<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Phone</th>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% @supporters.each do |supporter| %>
      <tr>
        <td><%= supporter.first_name %></td>
        <td><%= supporter.last_name %></td>
        <td><%= supporter.gmail %></td>
        <td><a href="<%= supporter.phone.phony_formatted(:format => :international, spaces: "") %>">Call <%= supporter.first_name %></a></td>
        <td><%= link_to 'Show', user_supporter_path(@user, supporter) %></td>
        <td><%= link_to 'Edit', edit_user_supporter_path(@user, supporter) %></td>
        <td><%= link_to 'Destroy', user_supporter_path(@user, supporter), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Add a new supporter', new_user_supporter_path(@user) %>